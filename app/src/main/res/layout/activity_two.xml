<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ActivityTwo">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.5">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/logo"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_logo"
                android:text="Online Report"
                android:fontFamily="@font/comfortaa"
                android:textColor="@color/green"
                android:textSize="18sp"
                android:layout_marginTop="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp" />

            <RelativeLayout
                android:id="@+id/relative_one"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/img_logo"
                android:background="@drawable/rounded_one"
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <TextView
                    android:id="@+id/tv_namaGuruText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textColor="@color/orange"
                    android:fontFamily="@font/comfortaa"
                    android:textSize="12sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/tv_namaGuru"
                    android:layout_below="@id/tv_namaGuruText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aji Suryawan"
                    android:textColor="@color/white"
                    android:fontFamily="@font/comfortaa"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/tv_nipGuruText"
                    android:layout_below="@id/tv_namaGuru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIP"
                    android:textColor="@color/orange"
                    android:fontFamily="@font/comfortaa"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/tv_nipGuru"
                    android:layout_below="@id/tv_nipGuruText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19936909"
                    android:textColor="@color/white"
                    android:fontFamily="@font/comfortaa"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"/>

                <Button
                    android:id="@+id/btn_detail"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="40dp"
                    android:text="Detail"
                    android:textSize="12sp"
                    android:background="@drawable/button_two"
                    android:textAllCaps="false"
                    android:fontFamily="@font/cocogoose"
                    android:textColor="@color/green"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center" />

            </RelativeLayout>

            <Button
                android:id="@+id/btn_dataJurnal"
                android:layout_below="@id/relative_one"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/rounded_two"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Data Jurnal Santri"
                android:textColor="@color/white"
                android:fontFamily="@font/comfortaa"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp">
            </Button>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <RelativeLayout
            android:id="@+id/btn_isiJurnal"
            android:background="@drawable/circle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ISI\nJURNAL"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="20sp"
                android:fontFamily="@font/cocogoose"
                android:gravity="center_horizontal" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>