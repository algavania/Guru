<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="159dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/logo"/>

    <Button
        android:id="@+id/btn_masuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Masuk"
        android:fontFamily="@font/cocogoose"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_password"
        android:layout_marginLeft="40dp"
        android:textColor="@color/orange"
        android:text="Password"
        android:fontFamily="@font/awanzamanregular"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_username"
        android:layout_marginLeft="40dp"
        android:textColor="@color/orange"
        android:text="User ID"
        android:fontFamily="@font/awanzamanregular"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/txt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan username"
        android:textColorHint="@color/gray"
        android:background="@null"
        android:layout_marginRight="40dp"
        android:textColorLink="@color/black"
        android:inputType="textEmailAddress"
        android:layout_above="@id/tv_password"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/comfortaa"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/txt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan password"
        android:textColorHint="@color/gray"
        android:background="@null"
        android:textColorLink="@color/black"
        android:inputType="textPassword"
        android:layout_above="@id/btn_masuk"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/black"
        android:fontFamily="@font/comfortaa"
        android:textSize="15sp"/>


</RelativeLayout>