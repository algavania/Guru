<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lightgray"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">
    
    <RelativeLayout
        android:id="@+id/relative_dataSantri"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_listNamaSantri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"
            android:text="Danil Arya"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_below="@id/tv_listNamaSantri"
            android:id="@+id/tv_listKelompokBelajar"
            android:text="Umar Bin Khatab"
            android:textSize="13dp"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_below="@id/tv_listKelompokBelajar"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_listTanggalJurnal"
            android:fontFamily="@font/comfortaa"
            android:text="29/04/2020"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>