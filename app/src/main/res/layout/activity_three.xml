<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityThree">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_one"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/green"
            app:titleTextAppearance="@style/Toolbar.TitleText"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_pembimbingIsiJurnal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Pembimbing"
                    android:textColor="@color/darkorange"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txt_pembimbingIsiJurnal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_pembimbingIsiJurnal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/darkorange"
                    android:textColorHighlight="@color/black"
                    android:fontFamily="@font/comfortaa"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_tanggalIsiJurnal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_pembimbingIsiJurnal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Tanggal"
                    android:textColor="@color/darkorange"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txt_tanggalIsiJurnal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_tanggalIsiJurnal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/darkorange"
                    android:fontFamily="@font/comfortaa"
                    android:inputType="date"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_kelompokBelajarJurnal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_tanggalIsiJurnal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Kelompok Belajar"
                    android:textColor="@color/darkorange"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/spinner_layoutOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_kelompokBelajarJurnal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/custom_spinner"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_kelompokBelajarJurnal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:spinnerMode="dropdown"
                        android:theme="@style/SpinnerTheme" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_keyboard_arrow_down_orange_24dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_namaSantriJurnal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spinner_layoutOne"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Nama Santri"
                    android:textColor="@color/darkorange"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/spinner_layoutTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_namaSantriJurnal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/custom_spinner"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_namaSantriJurnal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:spinnerMode="dropdown"
                        android:theme="@style/SpinnerTheme" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_keyboard_arrow_down_orange_24dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_laporanKegiatanJurnal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spinner_layoutTwo"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Laporan Kegiatan"
                    android:textColor="@color/darkorange"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txt_laporanKegiatanJurnal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_laporanKegiatanJurnal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/darkorange"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_fotoKegiatanJurnal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_laporanKegiatanJurnal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Foto Kegiatan"
                    android:textColor="@color/darkorange"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_fotoKegiatanJurnal"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/camera"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/tv_fotoKegiatanJurnal"/>

                <TextView
                    android:id="@+id/tv_ketukGambar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*Ketuk untuk memilih image"
                    android:fontFamily="@font/comfortaa"
                    android:layout_marginLeft="20dp"
                    android:textSize="10sp"
                    android:layout_below="@id/img_fotoKegiatanJurnal"
                    android:textColor="@color/red"/>

                <Button
                    android:id="@+id/btn_kirimJurnal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:layout_below="@id/tv_ketukGambar"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="KIRIM &amp; LAPORKAN"
                    android:fontFamily="@font/cocogoose"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <View android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/toolbar_shadow"/>

        </FrameLayout>

    </LinearLayout>

</ScrollView>